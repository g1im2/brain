# Brain 服务环境变量示例

# 服务配置
INTEGRATION_HOST=0.0.0.0
INTEGRATION_PORT=8088
INTEGRATION_DEBUG=false
ENVIRONMENT=production

# 服务发现配置
MACRO_SERVICE_URL=http://macro:8080
PORTFOLIO_SERVICE_URL=http://portfolio:8080
EXECUTION_SERVICE_URL=http://execution:8087
FLOWHUB_SERVICE_URL=http://flowhub:8080

# 调度器配置
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Shanghai

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@timescaledb:5432/stock_data
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=1800
DATABASE_POOL_TIMEOUT=30

# Redis配置
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# 监控配置
MONITORING_ENABLED=true
METRICS_PORT=9090

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/integration.log
